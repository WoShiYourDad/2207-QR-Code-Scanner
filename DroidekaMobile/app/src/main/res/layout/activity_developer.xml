                        android:id="@+id/textView_Description_SzeYing"
                        android:layout_width="215dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:ellipsize="none"
                        android:maxLines="4"
                        android:scrollHorizontally="false"
                        android:text="Hello I am Sze Ying and I am a student from SIT, currently studying in Information Security. \nI hope you will like our application. We have put in a lot of effort into this!"
